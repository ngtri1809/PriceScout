{
  "name": "pricescout",
  "version": "1.0.0",
  "description": "PriceScout - Intelligent price tracking and prediction platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "docker-compose up -d && pnpm --parallel --filter='./apps/*' dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "test:e2e": "pnpm --filter='./apps/web' test:e2e",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "db:migrate": "pnpm --filter='./apps/api' db:migrate",
    "db:seed": "pnpm --filter='./apps/api' db:seed",
    "db:reset": "pnpm --filter='./apps/api' db:reset",
    "clean": "pnpm --recursive clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

